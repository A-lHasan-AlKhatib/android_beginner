<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:columnCount="6"
    android:rowCount="3"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="2"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#CDDC39"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/android" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/al_hasan"
            android:textColor="#3AB441"
            android:textSize="30sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#868686"
        android:src="@drawable/android" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#1D1B1B"

        android:src="@drawable/android" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#F44336"

        android:src="@drawable/android" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_rowSpan="2"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#3F51B5"
        android:src="@drawable/android" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#3C5023"

        android:src="@drawable/android" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#3C5023"

        android:src="@drawable/android" />
    <ImageView
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:src="@drawable/android"
        android:layout_margin="1dp"
        android:background="#64B4F5"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#AC2E25"

        android:src="@drawable/android" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#84F500"

        android:src="@drawable/android" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="#E90F00"

        android:src="@drawable/android" />


</GridLayout>